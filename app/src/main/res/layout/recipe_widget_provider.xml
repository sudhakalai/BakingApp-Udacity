<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#09C"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/recipe_widget_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_8"
        android:text="@string/recipe_no_data"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_22" />

    <ListView
        android:id="@+id/recipe_widget_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/width_8"
        android:divider="@android:color/white"
        android:dividerHeight="@dimen/width_1" />

</LinearLayout>